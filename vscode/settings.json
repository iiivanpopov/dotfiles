{
  // ═══════════════════════════════════════════════════════════════
  // Appearance
  // ═══════════════════════════════════════════════════════════════
  
  // Fonts
  "editor.fontFamily": "JetBrains Mono, PragmataPro Mono Liga, MonoLisa, Cascadia Code, SF Mono, Fira Code, Ubuntu Mono, monospace",
  "editor.fontSize": 20,
  "editor.fontWeight": "400",
  "editor.fontLigatures": false,
  "editor.lineHeight": 26,
  "editor.inlayHints.fontFamily": "PragmataPro",
  "editor.codeLensFontFamily": "PragmataPro",
  
  // Cursor
  "editor.cursorStyle": "line-thin",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.multiCursorModifier": "ctrlCmd",
  
  // UI Elements
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.folding": true,
  "editor.lightbulb.enabled": "off",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.guides.indentation": false,
  "editor.inlayHints.enabled": "off",
  "editor.stickyScroll.enabled": false,
  "editor.stickyScroll.scrollWithEditor": false,
  
  // Scroll
  "editor.scrollBeyondLastLine": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  
  // Wrapping
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.wrappingIndent": "same",
  
  // ═══════════════════════════════════════════════════════════════
  // Behaviour
  // ═══════════════════════════════════════════════════════════════
  
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.gotoLocation.multipleDefinitions": "goto",
  
  // Onsave actions
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always"
  },
  
  // Token colors customization
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "entity.name.type.class",
          "keyword",
          "constant",
          "storage.modifier",
          "storage.type.class.js"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  
  // ═══════════════════════════════════════════════════════════════
  // Interface
  // ═══════════════════════════════════════════════════════════════
  
  "workbench.colorTheme": "August - Kanagawa",
  "workbench.iconTheme": "flow-dark",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "workbench.layoutControl.enabled": false,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.tree.enableStickyScroll": false,
  "workbench.startupEditor": "newUntitledFile",
  
  // Tabs
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.tabSizing": "shrink",
  
  // ═══════════════════════════════════════════════════════════════
  // WINDOW
  // ═══════════════════════════════════════════════════════════════
  
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 2,
  "window.commandCenter": false,
  "window.confirmBeforeClose": "keyboardOnly",
  "window.density.editorTabHeight": "compact",
  "window.openFilesInNewWindow": "off",
  
  // ═══════════════════════════════════════════════════════════════
  // ZEN MODE
  // ═══════════════════════════════════════════════════════════════
  
  "zenMode.centerLayout": true,
  "zenMode.fullScreen": true,
  "zenMode.hideLineNumbers": true,
  "zenMode.showTabs": "none",
  
  // ═══════════════════════════════════════════════════════════════
  // TERMINAL
  // ═══════════════════════════════════════════════════════════════
  
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "PragmataPro Liga",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.environmentChangesRelaunch": false,
  
  // ═══════════════════════════════════════════════════════════════
  // EXPLORER
  // ═══════════════════════════════════════════════════════════════
  
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.excludeGitIgnore": false,
  
  // ═══════════════════════════════════════════════════════════════
  // FILES
  // ═══════════════════════════════════════════════════════════════
  
  "files.eol": "\n",
  "files.defaultLanguage": "plaintext",
  
  "files.exclude": {
    "**/.cursor": true,
    "**/.idea": true,
    "**/.nuxt": true,
    "**/.tanstack": true,
    "**/.vscode": true,
    "**/bun.lock": true,
    "**/Cargo.lock": true,
    "**/certs": true,
    "**/credentials": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/prisma/generated": true,
    "**/routeTree.gen.ts": true,
    "**/target": true,
    "**/tsconfig.node.tsbuildinfo": true,
    "**/.husky/_": true
  },
  
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true
  },
  
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true
  },
  
  "files.associations": {
    "prepare-commit-msg": "shellscript" // husky precommit
  },
  
  // ═══════════════════════════════════════════════════════════════
  // SEARCH
  // ═══════════════════════════════════════════════════════════════
  
  "search.exclude": {
    "**/routeTree.gen.ts": true
  },
  
  // ═══════════════════════════════════════════════════════════════
  // NAVIGATION
  // ═══════════════════════════════════════════════════════════════
  
  "breadcrumbs.enabled": false,
  
  // ═══════════════════════════════════════════════════════════════
  // ESLINT
  // ═══════════════════════════════════════════════════════════════
  
  "eslint.lintTask.command": "bun eslint", // run ts
  
  // Antfu eslint guidlines
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "off", "fixable": true },
    { "rule": "format/*", "severity": "off", "fixable": true },
    { "rule": "*-indent", "severity": "off", "fixable": true },
    { "rule": "*-spacing", "severity": "off", "fixable": true },
    { "rule": "*-spaces", "severity": "off", "fixable": true },
    { "rule": "*-order", "severity": "off", "fixable": true },
    { "rule": "*-dangle", "severity": "off", "fixable": true },
    { "rule": "*-newline", "severity": "off", "fixable": true },
    { "rule": "*quotes", "severity": "off", "fixable": true },
    { "rule": "*semi", "severity": "off", "fixable": true }
  ],
  
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  
  // ═══════════════════════════════════════════════════════════════
  // TYPESCRIPT
  // ═══════════════════════════════════════════════════════════════
  
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.maxTsServerMemory": 8192,
  
  // ═══════════════════════════════════════════════════════════════
  // JAVASCRIPT / HTML
  // ═══════════════════════════════════════════════════════════════
  
  "javascript.autoClosingTags": true,
  "html.autoClosingTags": true,
  
  // ═══════════════════════════════════════════════════════════════
  // NPM / BUN
  // ═══════════════════════════════════════════════════════════════
  
  "npm.packageManager": "bun",
  "npm.scriptRunner": "bun",
  "npm.scriptHover": false,
  
  // ═══════════════════════════════════════════════════════════════
  // CSS
  // ═══════════════════════════════════════════════════════════════
  
  "css.lint.unknownAtRules": "ignore",
  
  // ═══════════════════════════════════════════════════════════════
  // GIT
  // ═══════════════════════════════════════════════════════════════
  
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  
  // ═══════════════════════════════════════════════════════════════
  // SPELL CHECKER
  // ═══════════════════════════════════════════════════════════════
  
  "cSpell.enabled": true,
  "cSpell.autoFormatConfigFile": true,
  "cSpell.language": "en, uk, ru",
  
  // ═══════════════════════════════════════════════════════════════
  // GITHUB COPILOT / CHAT
  // ═══════════════════════════════════════════════════════════════
  
  "github.copilot.nextEditSuggestions.enabled": true,
  "chat.mcp.gallery.enabled": true,
  "chat.viewSessions.orientation": "stacked",
  "chat.editor.fontFamily": "PragmataPro",
  
  // ═══════════════════════════════════════════════════════════════
  // DEBUG
  // ═══════════════════════════════════════════════════════════════
  
  "debug.javascript.codelens.npmScripts": "never",
  "debug.console.fontFamily": "PragmataPro",
  
  // ═══════════════════════════════════════════════════════════════
  // C/C++
  // ═══════════════════════════════════════════════════════════════
  
  "C_Cpp.clang_format_fallbackStyle": "Google",
  
  // ═══════════════════════════════════════════════════════════════
  // DOCKER
  // ═══════════════════════════════════════════════════════════════
  
  "docker.extension.dockerEngineAvailabilityPrompt": false,
  
  // ═══════════════════════════════════════════════════════════════
  // SECURITY & TRUST
  // ═══════════════════════════════════════════════════════════════
  
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.untrustedFiles": "open",

  "extensions.ignoreRecommendations": true,
}